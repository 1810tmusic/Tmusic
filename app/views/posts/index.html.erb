<style>
th {text-align:center;}
form {margin: 0;}
</style>
<table class="table">
<thead>
<tr>
<th></th>
<th>image</th>
<th>product</th>
<th>artist</th>
<th>comment</th>
<% if current_user.id === @user.id %>
<th>edit</th>
<% end %>
<th></th>
</tr>
</thead>
<tbody>
<% @posts.each do |post| %>
<% if post.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
<tr>
<% post.errors.full_messages.each do |message| %>
  <th><% message %></th>
<% end %>
</tr>
</div>
<% end %>
<tr>
<th></th>
<th>
  <%= link_to product_path(post.product.id) do %>
              <div class="product-image-cart">
                <% if post.product.product_image.present? %>
                  <%= attachment_image_tag post.product, :product_image, :fill, 120, 120, format: 'jpeg' %>
                <% else %>
                  No Image
                <% end %>
              </div>
            <% end %>
          </th>
<th><%= link_to post.product.product_name, product_path(post.product) %></th>
<th><%= post.product.artist.artist_name %></th>
<th id="<%= post.id %>"><%= post.comment %></th>
<% if current_user.id === @user.id%>
<th><%= link_to "編集", edit_user_post_path(user_id: @user.id, id: post.id), remote: true %></th>
<th><%= link_to "delete", user_post_path(user_id: @user.id, id: post.id), method: :delete %></th>
<% end %>
</tr>
<% end %>
</tbody>
</table>
