<h1>トップページ</h1>

<div class="container">

<div class="row">

<h3>新着</h3>

<% @products.last(6).reverse_each do |product| %>
  <div class="col-md-2">
    <div class="product-image">
    </div>

    <div class="product-table">
      <table>
        <tbody>
          <tr>
            <td>
              <%= product.product_name %>
            </td>
          </tr>
          <tr>
            <td>
              <%= product.artist.artist_name %>
            </td>
          </tr>
          <tr>
            <td>
              <% product.prices.reverse_each do |price| %>
              価格: &yen;<%= number_with_delimiter(price.price) %>
              <% break %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <% if product.stock != 0 %>
                <%= link_to "カートに追加", add_to_cart_path(product.id, product_id: product.id), method: :post %>
              <% else %>
                <%= "売り切れです" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div> <!-- /col-md-2 -->
<% end %>


</div> <!-- /row -->

</div> <!-- /container -->