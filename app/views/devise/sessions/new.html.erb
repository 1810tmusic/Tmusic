<%= javascript_include_tag 'jquery-3.3.1.min.js' %>
<%= javascript_include_tag 'sessions_new.js' %>

<div id="devise-sessions-container">

<div class="container">

<div class="row">

<div class="col-md-4 col-md-offset-8 devise-sessions-right">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログインしたままにする", style:"font-weight: normal;" %>
      <% end %>
      <div class="devise-actions-button">
        <%= button_tag class:"btn btn-warning form-control" do %>
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> ログイン
        <% end %>
      </div>
    </div> <!-- /form-group -->
  <% end %>
  <%= render "devise/shared/links" %>
</div> <!-- /col -->

</div> <!-- /row -->

</div> <!-- /container -->

</div> <!-- /devise-sessions-container -->