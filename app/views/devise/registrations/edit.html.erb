<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<!-- エラーメッセージ -->
<% if devise_error_messages? %>
  <div class="flash-message-application">
    <div class="container">
      <%= devise_error_messages! %>
    </div>
  </div>
<% end %>
<!-- エラーメッセージおわり -->

<div class="container">

<div class="row">

<div class="col-md-4 col-md-offset-4">
  <div class="devise-passwords-new-headline">
    <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> パスワード変更
  </div>
  <div class="devise-passwords-new-inst">
    ログイン時に使用するメールアドレスと現在のパスワードを入力してください。
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-group">
      <div class="devise-passwords-new-field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
      <div class="devise-passwords-new-field">
        <%= f.label :current_password, "現在のパスワード" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
      </div>
      <div class="devise-registrations-edit-inst">
        変更後の新しいパスワードを入力してください。
      </div>
      <div class="devise-passwords-new-field">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>（<%= @minimum_password_length %>文字以上）</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
      <div class="devise-passwords-new-field">
        <%= f.label :password_confirmation, "新しいパスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
      <div class="devise-actions-button">
        <%= button_tag class:"btn btn-warning form-control" do %>
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 変更
        <% end %>
      </div>
    </div> <!-- /form-group -->
  <% end %>

  <!-- 戻るボタン -->
  <div class="devise-actions-button">
    <%= link_to :back, style: "text-decoration: none;" do %>
      <button class="btn btn-default form-control">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 変更せずに戻る
      </button>
    <% end %>
  </div>
  <!-- 戻るボタンおわり -->

</div> <!-- /col -->

</div> <!-- /row -->

</div> <!-- /container -->